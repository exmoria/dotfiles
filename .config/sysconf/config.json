    "lightdm-gtk-greeter",
    "gvfs",
    "xarchiver",
    "pavucontrol",
    "keepassxc",
    "unclutter",
    "lm_sensors",
    "udisks2",
    "ffmpeg",
    "reflector",
    "profile-sync-daemon",
    "go",
    "gsmartcontrol",
    "thermald",
    "zsh-completions",
    "zsh-autosuggestions",
    "openssh",
    "docker-compose",
    "vlc",
    "x11-ssh-askpass",
    "network-manager-applet",
